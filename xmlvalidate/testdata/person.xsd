<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:element name="name" type="xs:string"/>
<xs:element name="age" type="xs:positiveInteger"/>

<xs:element name="person">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="name"/>
      <xs:element ref="age"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

</xs:schema>
